DEFINE_PATCH_FUNCTION ADD_UNIQUE_MARK
	INT_VAR 
		check_globals=1
		check_headers=1
		match_opcode = ~-1~
		match_target = ~-1~
		match_power = ~-1~
		match_parameter1 = ~-1~
		match_parameter2 = ~-1~
		match_timing = ~-1~
		match_resist_dispel = ~-1~
		match_duration = ~-1~
		match_probability1 = ~-1~
		match_probability2 = ~-1~
		match_dicenumber = ~-1~
		match_dicesize = ~-1~
		match_savingthrow = ~-1~
		match_savebonus = ~-11~
		match_special = ~-1~
	STR_VAR 
		identifier=~~
		match_resource=~SAME~
BEGIN
	LPF find_stat STR_VAR identifier=EVAL ~%identifier%~ RET stat=stat_value END
	stat+=%engine_stat_type%
	LPF CLONE_EFFECT 
		INT_VAR 
			multi_match=1
			check_globals
			check_headers
			match_opcode
			match_target
			match_power
			match_parameter1
			match_parameter2
			match_timing
			match_resist_dispel
			match_duration
			match_probability1
			match_probability2
			match_dicenumber
			match_dicesize
			match_savingthrow
			match_savebonus
			match_special
			opcode=%engine_mark_type%
			parameter1=%engine_value_type%
			parameter2=%stat%
			special=%engine_special_type%
		STR_VAR
			resource=~~
			silent=1
			insert=below
			match_resource
	END
END


