DEFINE_ACTION_MACRO read_ids BEGIN
	ACTION_IF !FILE_EXISTS_IN_GAME ~c4_stat_temp.ids~ THEN BEGIN
		LAM check_existance
	END		
	COPY_EXISTING - ~c4_stat_temp.ids~ override
		READ_2DA_ENTRIES_NOW rows 2
		FOR (i=0;i<rows;i+=1) BEGIN
			READ_2DA_ENTRY_FORMER rows i 0 value_
			READ_2DA_ENTRY_FORMER rows i 1 identifier_
			SPRINT $stat_exists(~%value_%~) ~%identifier_%~
		END
END

DEFINE_ACTION_FUNCTION find_stat_output INT_VAR stats_input=500 STR_VAR identifier_input=~~ RET stat_value_output BEGIN
	ACTION_IF !VARIABLE_IS_SET $stat_exists(1) THEN BEGIN
		LAM read_ids
	END
	OUTER_SET exist=0
	ACTION_IF !VARIABLE_IS_SET modder_prefix THEN BEGIN
		OUTER_SPRINT modder_prefix ~c4~
	END
	ACTION_PHP_EACH stat_exists AS value => string BEGIN
		ACTION_IF ~%identifier_input%~ STR_EQ ~%string%~ THEN BEGIN
			OUTER_SET stat_value_output = value
			/* PRINT ~%identifier_input% exists, value = %value%~ */
			OUTER_SET exist=1
		END
	END
	ACTION_IF exist=0 THEN BEGIN
		OUTER_SET stat_value_output=stats_input
		OUTER_SET x=stat_value_output
		OUTER_WHILE x<32768 BEGIN
			OUTER_SET skip=0
			ACTION_PHP_EACH stat_exists AS value => string BEGIN
				ACTION_IF x=value THEN BEGIN
					OUTER_SET skip=1
				END
			END
			ACTION_IF skip=0 THEN BEGIN
				OUTER_SET stats_input=stat_value_output
				OUTER_SET x=32768
			END ELSE BEGIN 
				OUTER_SET stat_value_output +=1
				OUTER_SET x+=1
			END
		END
	END
END

DEFINE_ACTION_FUNCTION find_stat INT_VAR stats_now=stats_offset STR_VAR identifier=~~ RET stat_value BEGIN

	LAF find_stat_output INT_VAR stats_input=%stats_now% STR_VAR identifier_input=EVAL ~%identifier%~ RET stat_value=%stat_value_output% END
	
	OUTER_SET $stat_exists(~%stat_value%~)=1
	ACTION_IF (STRING_LENGTH ~%identifier%~) >0 THEN BEGIN
		APPEND ~c4_stat_temp.ids~ ~%stat_value% %identifier%~ UNLESS ~%identifier%~ 
		APPEND ~%engine_ids_file%.ids~ ~%stat_value% %identifier%~ UNLESS ~%identifier%~ 
	END
	
END

DEFINE_PATCH_FUNCTION find_stat INT_VAR stats_now=stats_offset STR_VAR identifier=~~ RET stat_value BEGIN

	INNER_ACTION BEGIN
		LAF find_stat_output INT_VAR stats_input=%stats_now% STR_VAR identifier_input=EVAL ~%identifier%~ RET stat_value=%stat_value_output% END
	
		OUTER_SET $stat_exists(~%stat_value%~)=1
		ACTION_IF (STRING_LENGTH ~%identifier%~) >0 THEN BEGIN
			APPEND ~c4_stat_temp.ids~ ~%stat_value% %identifier%~ UNLESS ~%identifier%~ 
			APPEND ~%engine_ids_file%.ids~ ~%stat_value% %identifier%~ UNLESS ~%identifier%~ 
		END
	END
	
END


